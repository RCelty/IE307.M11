<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhoneStoreApp.Views.SignUpSuccessPage"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">
    <StackLayout Padding="30,0,30,0">
        <Label Text="Đăng ký thành công"
               FontSize="30" TextColor="Black" FontAttributes="Bold"
               Margin="0,100,0,0" HorizontalTextAlignment="Center"></Label>
        <Image Source="success.png" WidthRequest="250"
               HorizontalOptions="Center"></Image>
        <Button Text="Tiếp tục" FontSize="18" TextTransform="None"
                CornerRadius="10"
                BackgroundColor="#57acf5" TextColor="White"
                VerticalOptions="EndAndExpand" Margin="0,0,0,30"
                x:Name="btnSignUpSuccess" Clicked="btnSignUpSuccess_Clicked"></Button>
    </StackLayout>
</ContentPage>