<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhoneStoreApp.Views.LostPasswordPage"
             x:Name="MyLostPasswordPage">
    <StackLayout Padding="30,0,30,0" BackgroundColor="White">
        <!--Color Btn #57acf5-->
        <Label Text="Quên mật khẩu" 
               FontSize="30" TextColor="Black" FontAttributes="Bold"
               Margin="0,20,0,20"></Label>
        <Label Text="Vui lòng nhập địa chỉ email mà bạn muốn cấp lại mật khẩu" 
               FontSize="15" TextColor="#838589"
               Margin="0,0,0,50"></Label>
        <Label Text="Email" 
               FontSize="15" TextColor="Black"
               Margin="0,0,0,10"></Label>
        <Entry Keyboard="Email" MaxLength="80"
               TextColor="Black" FontSize="18" Placeholder="Nhập địa chỉ Email" 
               Margin="0,0,0,50" x:Name="txtLoginUserEmail"></Entry>
        <Label Text="" FontSize="10" TextColor="Red"
                   x:Name="lbUserMailError"></Label>
        <Button Text="Cấp lại mật khẩu" FontSize="18" TextTransform="None"
                CornerRadius="10"
                BackgroundColor="#57acf5" TextColor="White"
                x:Name="btnSendVerifyCode" Clicked="btnSendVerifyCode_Clicked"></Button>
    </StackLayout>
</ContentPage>